# Media Server Stack Environment Variables - EXAMPLE
# Copy this file to .env and update the values below
# ===========================================

# User Configuration
PUID=1000
PGID=1000
TZ=America/New_York

# Domain Configuration (REQUIRED - Update these for your setup)
DOMAIN=media.local
EMAIL=admin@media.local


# Database Configuration (Optional - using SQLite by default)
# DB_HOST=postgres
# DB_NAME=authelia
# DB_USERNAME=authelia
# DB_PASSWORD=authelia

# SMTP Configuration (Optional - Update for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER=noreply@media.local

# Media Paths (Usually don't need to change)
CONFIG_ROOT=./config
DATA_ROOT=./data
DOWNLOADS_ROOT=./data/torrents
MEDIA_ROOT=./data/media

# Network Configuration (Usually don't need to change)
MEDIA_NETWORK=media_network

# Service Ports (Internal - Usually don't need to change)
JELLYFIN_PORT=8096
JELLYSEERR_PORT=5055
RADARR_PORT=7878
SONARR_PORT=8989
LIDARR_PORT=8686
READARR_PORT=8787
BAZARR_PORT=6767
PROWLARR_PORT=9696
QBITTORRENT_PORT=8080
FLARESOLVERR_PORT=8191
HEIMDALL_PORT=8082

# External Access Ports (Change if needed)
HTTP_PORT=8091

# Hardware Acceleration (Uncomment based on your GPU)
# Intel/AMD GPU (most common)
JELLYFIN_DEVICES=/dev/dri:/dev/dri

# NVIDIA GPU (uncomment if using NVIDIA)
# NVIDIA_VISIBLE_DEVICES=all
# NVIDIA_DRIVER_CAPABILITIES=compute,video,utility


# Optional: Cloudflare Settings (if using Cloudflare)
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
# CLOUDFLARE_ZONE_ID=your_zone_id

# Optional: DDNS Settings
# DDNS_PROVIDER=cloudflare
# DDNS_TOKEN=your_ddns_token
# DDNS_ZONE=your_zone

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=50m
LOG_MAX_FILES=3

# Resource Limits (Optional)
CPU_LIMIT=4
MEMORY_LIMIT=8g

# Feature Flags
ENABLE_AUTH=true
ENABLE_MONITORING=false